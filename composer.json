{
  "name": "National Player Database USAFB",
  "description": "",
  "keywords": [
    "framework",
    "laravel",
    "lumen"
  ],
  "license" : "MIT",
	"type" : "project",
	"require" : {
		"php" : ">=5.6.4",
		"auth0/auth0-php" : "~5.0",
		"laravel/lumen-framework" : "5.4.*",
		"vlucas/phpdotenv" : "~2.2",
		"flow/jsonpath" : "^0.3.4",
    "appzcoder/lumen-routes-list": "^1.0"
	},
	"require-dev" : {
		"fzaninotto/faker" : "~1.4",
		"phpunit/phpunit" : "~5.0",
		"mockery/mockery" : "~0.9",
		"squizlabs/php_codesniffer" : "^3.0",
		"codeception/codeception" : "^2.3",
		"monolog/monolog" : "^1.23"
	},
	"autoload" : {
		"psr-4" : {
			"App\\" : "app/"
		}
	},
	"autoload-dev" : {
		"classmap" : [
			"tests/",
			"database/"
		]
	},
	"scripts" : {
		"setup" : [
			"@composer install",
			"cp .env.example .env"
		],
		"start" : "@php -S localhost:8000 -t public",
		"lint" : [
			"@lint:syntax",
			"@lint:cs"
		],
		"lint:syntax" : "find . -name '*.php' ! -path './vendor/*' -print0 | xargs -0 -n 1 -P 4 php -l | grep -v 'No syntax errors' || true",
		"lint:cs" : "@php vendor/bin/phpcs --standard=PSR2 --ignore=vendor/ --colors ./app",
		"test" : "@php vendor/bin/phpunit --colors",
    "env:prereq":   "@php vendor/bin/codecept run -g prereq",
		"test:all" : "@php vendor/bin/codecept run --steps --xml TestXMLExecutionReport-$(date '+%FT%T').xml  --html  TestHTMLExecutionReport-$(date '+%FT%T').html",
		"test:sanity" : "@php vendor/bin/codecept run -g sanity --steps --xml TestSanityXMLExecutionReport-$(date '+%FT%T').xml  --html  TestSanityHTMLExecutionReport-$(date '+%FT%T').html",
		"test:rel" : "@php vendor/bin/codecept run -g release --steps --xml TestRelXMLExecutionReport-$(date '+%FT%T').xml  --html  TestRelHTMLExecutionReport-$(date '+%FT%T').html",
		"test:reg" : "@php vendor/bin/codecept run -g regression --steps --xml TestRegXMLExecutionReport-$(date '+%FT%T').xml  --html  TestRegHTMLExecutionReport-$(date '+%FT%T').html -d",
		"post-root-package-install" : "php -r \"copy('.env.example', '.env');\""
	},
	"minimum-stability" : "dev",
	"prefer-stable" : true
}
